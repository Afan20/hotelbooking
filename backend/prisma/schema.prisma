generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id            String   @id @default(cuid())
  name          String
  type          String
  capacity      Int
  pricePerNight Int
  features      String   // JSON string for simplicity
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bookings      Booking[]
}

model Booking {
  id              String   @id @default(cuid())
 status          String   @default("confirmed") // confirmed | cancelled | checked_out
 checkedOutAt    DateTime?


  guestFullName   String
  guestEmail      String
  guestPhone      String?

  checkIn         String
  checkOut        String
  guests          Int
  specialRequests String?

  nights          Int

  // money
  subtotal        Float
  tax             Float
  total           Float

  // discounts (new)
  discountPercent Float   @default(0)
  discountAmount  Float   @default(0)

  roomId          String
  room            Room     @relation(fields: [roomId], references: [id])

  createdAt       DateTime @default(now())
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         String   // "admin" | "receptionist"
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
